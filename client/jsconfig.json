{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "sourceMap": false,
        "target": "es6",
        "allowJs": true,
        "paths": {
            "components/*": [
                "./components/*"
            ],
            "pages/*": [
                "./pages/*"
            ],
            "images/*": [
                "./assets/images/*"
            ],
            "@/*": [
                "./*"
            ],
        }
    },
    "include": [
        "./**/*.js",
        "./**/*.vue"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./public"
    ]
}
